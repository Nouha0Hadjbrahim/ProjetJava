<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="rootContainer" spacing="15" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.AteliersController">

    <Label text="GESTION DES ATELIERS" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <TextField fx:id="searchField" promptText="Rechercher un atelier.."
               style="-fx-pref-width: 400; -fx-background-radius: 15;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="+" onAction="#ouvrirAjoutAtelier" style="-fx-font-size: 18px; -fx-background-radius: 50%;"/>
    </HBox>

    <TableView fx:id="atelierTable" prefHeight="400" style="-fx-background-radius: 10;">
    </TableView>

    <HBox fx:id="paginationContainer" alignment="CENTER" spacing="5"/>
</VBox>
