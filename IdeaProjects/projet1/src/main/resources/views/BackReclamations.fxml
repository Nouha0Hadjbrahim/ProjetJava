<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.BackReclamationController"
            stylesheets="@/styles/backReclamation.css">

    <top>
        <VBox>
            <HBox alignment="CENTER_RIGHT" style="-fx-padding: 10;">
                <ToggleButton fx:id="toggleArchive" styleClass="toggle-button"/>
            </HBox>

            <!-- Ajout des statistiques -->
            <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10;">
                <VBox alignment="CENTER" styleClass="stat-box">
                    <Label text="En attente" styleClass="stat-title"/>
                    <Label fx:id="pendingCount" text="0" styleClass="stat-value"/>
                </VBox>
                <VBox alignment="CENTER" styleClass="stat-box">
                    <Label text="En cours" styleClass="stat-title"/>
                    <Label fx:id="inProgressCount" text="0" styleClass="stat-value"/>
                </VBox>
                <VBox alignment="CENTER" styleClass="stat-box">
                    <Label text="Répondu" styleClass="stat-title"/>
                    <Label fx:id="answeredCount" text="0" styleClass="stat-value"/>
                </VBox>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox style="-fx-padding: 20;">
            <!-- Titre -->
            <Label text="Liste des Réclamations" styleClass="reclamation-title"/>

            <!-- Tableau + Pagination -->
            <VBox spacing="5">
                <TableView fx:id="reclamationTable" styleClass="reclamation-table">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID"/>
                        <TableColumn fx:id="statutColumn" text="Statut"/>
                        <TableColumn fx:id="dateColumn" text="Date"/>
                        <TableColumn fx:id="actionsColumn" text="Actions"/>
                    </columns>
                    <placeholder>
                        <Label text="Aucune réclamation trouvée" styleClass="no-reclamation-label"/>
                    </placeholder>
                </TableView>
                <Pagination fx:id="pagination" styleClass="pagination"/>
            </VBox>
        </VBox>
    </center>
</BorderPane>