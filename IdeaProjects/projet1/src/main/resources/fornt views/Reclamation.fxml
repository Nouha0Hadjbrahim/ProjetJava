<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<ScrollPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.ReclamationController"
            stylesheets="@/styles/reclamation.css"
            fitToWidth="true"
            style="-fx-background-color: transparent;">

    <VBox fx:id="reclamationContainer" spacing="25" alignment="TOP_CENTER" styleClass="bg">
        <padding>
            <Insets top="25" right="25" bottom="25" left="25"/>
        </padding>

        <!-- Titre principal -->
        <Label text="Liste des Réclamations" styleClass="reclamation-title" />

        <!-- TableView avec conteneur pour contrôler la largeur -->
        <StackPane alignment="CENTER">
            <TableView fx:id="reclamationTable"
                       maxWidth="900"
                       prefHeight="400"
                       styleClass="reclamation-table">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="titreColumn" text="Titre" prefWidth="180"/>
                    <TableColumn fx:id="statutColumn" text="Statut" prefWidth="150"/>
                    <TableColumn fx:id="dateColumn" text="Date" prefWidth="150"/>
                    <TableColumn fx:id="actionColumn" text="Actions" prefWidth="120"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </StackPane>

        <Label fx:id="noReclamationLabel"
               text="Aucune réclamation disponible"
               visible="false"
               managed="false"
               style="-fx-text-fill: grey; -fx-font-style: italic;" />

        <!-- Pagination -->
        <Pagination fx:id="pagination"
                    styleClass="pagination"
                    maxPageIndicatorCount="5"/>

        <!-- Formulaire d'ajout de réclamation -->
        <VBox spacing="15" styleClass="form-container" maxWidth="900" alignment="CENTER">
            <!-- Titre centré -->
            <Label text="Ajouter une Nouvelle Réclamation" styleClass="form-title" />

            <GridPane hgap="10" vgap="10" alignment="CENTER">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" hgrow="NEVER" />
                    <ColumnConstraints hgrow="ALWAYS" prefWidth="300"/>
                </columnConstraints>

                <!-- Titre -->
                <Label text="Titre" styleClass="form-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="titreField" styleClass="form-field" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <!-- Description -->
                <Label text="Description" styleClass="form-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextArea fx:id="descriptionField" wrapText="true" prefRowCount="4" styleClass="form-field"
                          GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            </GridPane>

            <!-- Messages d'erreur -->
            <VBox alignment="CENTER" spacing="5">
                <Label fx:id="titreErrorLabel" text="Le titre doit contenir entre 3 et 6 caractères"
                       styleClass="error-label" visible="false" managed="false"/>
                <Label fx:id="descriptionErrorLabel" text="La description doit contenir entre 3 et 500 caractères"
                       styleClass="error-label" visible="false" managed="false"/>
            </VBox>

            <!-- Bouton centré -->
            <Button fx:id="submitButton" text="Ajouter" styleClass="submit-button" />
        </VBox>

        <!-- Footer -->
        <fx:include source="/fornt views/footer.fxml" />
    </VBox>
</ScrollPane>