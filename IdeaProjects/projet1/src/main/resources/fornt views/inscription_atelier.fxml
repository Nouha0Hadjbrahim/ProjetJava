<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<?import javafx.geometry.Insets?>
<ScrollPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.InscriptionAtelierController"
            stylesheets="@/styles/atelier.css"
            fitToWidth="true"
            style="-fx-background-color: transparent;">

<VBox spacing="40" alignment="CENTER"  styleClass="bg">

    <!-- Titre principal -->
    <VBox spacing="10" alignment="CENTER">
        <Label text="Ateliers en ligne disponible" styleClass="ateliers-title" />
        <Label text="Apprenez l'artisanat à distance avec nos experts !" styleClass="ateliers-subtitle" />
    </VBox>

    <HBox spacing="10.0" alignment="CENTER">
        <ComboBox fx:id="statutFilter" promptText="Tous les statuts"
                  prefWidth="180.0" prefHeight="30.0"
                  styleClass="rounded-combo-box">
        </ComboBox>
    </HBox>

    <!-- Zone où les cartes seront ajoutées dynamiquement -->
    <GridPane fx:id="historiqueContainer"
              hgap="30"
              vgap="30"
              alignment="CENTER"/>

    <fx:include source="/fornt views/footer.fxml" />
</VBox>
</ScrollPane>


