<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.TableUtilisateursController">

    <Label text="GESTION DES UTILISATEURS" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <!-- Barre de recherche -->
    <TextField fx:id="searchField" promptText="Rechercher un utilisateur.."
               style="-fx-pref-width: 400; -fx-background-radius: 15;"/>

    <!-- listview  -->
    <TableView fx:id="userTable" prefHeight="400" style="-fx-background-radius: 10;">
        <columns>

        </columns>
    </TableView>

    <!-- Pagination -->
    <HBox fx:id="paginationContainer" alignment="CENTER" spacing="5"/>
</VBox>
