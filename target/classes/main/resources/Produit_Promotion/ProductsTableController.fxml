<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.ProductsTableController" spacing="15"
      style="-fx-background-color: #F4F6FA; -fx-padding: 15;"
      prefHeight="800.0" prefWidth="1100.0"
      stylesheets="@/styles/productsTable.css">

    <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: #2c3e50; -fx-background-radius: 5; -fx-padding: 12;">
        <effect>
            <DropShadow radius="5" spread="0.2" color="rgba(0,0,0,0.1)"/>
        </effect>

        <Label text="RECHERCHER" style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold;"/>

        <TextField fx:id="searchField" promptText="Nom du produit"
                   onKeyReleased="#filterProduits"
                   style="-fx-background-color: #ecf0f1; -fx-background-radius: 4; -fx-prompt-text-fill: #7f8c8d; -fx-padding: 5;"
                   prefWidth="150"/>

        <Label text="CATÉGORIE" style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold;"/>

        <ComboBox fx:id="categorieFilter" onAction="#filterProduits"
                  style="-fx-background-color: #ecf0f1; -fx-background-radius: 4;"
                  prefWidth="120">
            <effect>
                <InnerShadow radius="2" color="rgba(0,0,0,0.1)"/>
            </effect>
        </ComboBox>

        <Label text="STATUT" style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold;"/>

        <ComboBox fx:id="statutFilter" onAction="#filterProduits"
                  style="-fx-background-color: #ecf0f1; -fx-background-radius: 4;"
                  prefWidth="120">
            <effect>
                <InnerShadow radius="2" color="rgba(0,0,0,0.1)"/>
            </effect>
        </ComboBox>

        <Label text="PRIX (DT)" style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold;"/>

        <TextField fx:id="minPrixFilter" promptText="Min"
                   onKeyReleased="#filterProduits"
                   style="-fx-background-color: #ecf0f1; -fx-background-radius: 4; -fx-prompt-text-fill: #7f8c8d; -fx-padding: 5;"
                   prefWidth="80"/>

        <TextField fx:id="maxPrixFilter" promptText="Max"
                   onKeyReleased="#filterProduits"
                   style="-fx-background-color: #ecf0f1; -fx-background-radius: 4; -fx-prompt-text-fill: #7f8c8d; -fx-padding: 5;"
                   prefWidth="80"/>

        <Label text="STOCK" style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold;"/>

        <TextField fx:id="minStockFilter" promptText="Min"
                   onKeyReleased="#filterProduits"
                   style="-fx-background-color: #ecf0f1; -fx-background-radius: 4; -fx-prompt-text-fill: #7f8c8d; -fx-padding: 5;"
                   prefWidth="80"/>

        <TextField fx:id="maxStockFilter" promptText="Max"
                   onKeyReleased="#filterProduits"
                   style="-fx-background-color: #ecf0f1; -fx-background-radius: 4; -fx-prompt-text-fill: #7f8c8d; -fx-padding: 5;"
                   prefWidth="80"/>

        <Label text="TRIER" style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold;"/>

        <ComboBox fx:id="sortFilter" onAction="#filterProduits"
                  style="-fx-background-color: #ecf0f1; -fx-background-radius: 4;"
                  prefWidth="120">
            <effect>
                <InnerShadow radius="2" color="rgba(0,0,0,0.1)"/>
            </effect>
        </ComboBox>

        <Pane HBox.hgrow="ALWAYS"/>


        <Button fx:id="addProductButton" text="➕ Ajouter Produit" onAction="#handleAddProduct" />

        <Button fx:id="exportPdfButton" onAction="#exportToPDF" styleClass="icon-add-button">
            <graphic>
                <ImageView fitWidth="24" fitHeight="24" preserveRatio="true">
                    <image>
                        <Image url="@/assets/img.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </HBox>

    <TableView fx:id="produitsTable" styleClass="table-view">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="60" style="-fx-alignment: CENTER;"/>
            <TableColumn fx:id="nomProduitColumn" text="NOM PRODUIT" prefWidth="150"/>
            <TableColumn fx:id="categorieColumn" text="CATÉGORIE" prefWidth="120"/>
            <TableColumn fx:id="prixColumn" text="PRIX (DT)" prefWidth="100" style="-fx-alignment: CENTER_RIGHT;"/>
            <TableColumn fx:id="statutColumn" text="STATUT" prefWidth="100"/>
            <TableColumn fx:id="stockColumn" text="STOCK" prefWidth="80" style="-fx-alignment: CENTER;"/>
        </columns>
    </TableView>

    <HBox spacing="20" style="-fx-padding: 15;">
        <VBox style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-color: #dfe6e9; -fx-border-radius: 8; -fx-padding: 15;" prefWidth="350">
            <Label text="Répartition par Catégorie" style="-fx-font-weight: bold; -fx-font-size: 16; -fx-padding: 0 0 10 0;"/>
            <PieChart fx:id="categoryPieChart" prefHeight="250"/>
            <Label text="Montre la distribution des produits par catégorie, indiquant le nombre de produits dans chaque catégorie."
                   style="-fx-font-size: 12; -fx-text-fill: #636e72; -fx-padding: 10 0 0 0; -fx-wrap-text: true;"/>
        </VBox>
        <VBox style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-color: #dfe6e9; -fx-border-radius: 8; -fx-padding: 15;" prefWidth="350">
            <Label text="Stock par Catégorie" style="-fx-font-weight: bold; -fx-font-size: 16; -fx-padding: 0 0 10 0;"/>
            <BarChart fx:id="stockBarChart" prefHeight="250">
                <xAxis>
                    <CategoryAxis fx:id="stockXAxis" label="Catégorie"/>
                </xAxis>
                <yAxis>
                    <NumberAxis fx:id="stockYAxis" label="Stock"/>
                </yAxis>
            </BarChart>
            <Label text="Affiche le stock total de produits pour chaque catégorie, utile pour évaluer la disponibilité."
                   style="-fx-font-size: 12; -fx-text-fill: #636e72; -fx-padding: 10 0 0 0; -fx-wrap-text: true;"/>
        </VBox>
        <VBox style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-color: #dfe6e9; -fx-border-radius: 8; -fx-padding: 15;" prefWidth="350">
            <Label text="Prix des Produits en Promotion" style="-fx-font-weight: bold; -fx-font-size: 16; -fx-padding: 0 0 10 0;"/>
            <LineChart fx:id="priceLineChart" prefHeight="250">
                <xAxis>
                    <CategoryAxis fx:id="priceXAxis" label="Produit"/>
                </xAxis>
                <yAxis>
                    <NumberAxis fx:id="priceYAxis" label="Prix (DT)"/>
                </yAxis>
            </LineChart>
            <Label text="Illustre les prix des produits bénéficiant d'une promotion, mettant en avant jusqu'à 5 produits."
                   style="-fx-font-size: 12; -fx-text-fill: #636e72; -fx-padding: 10 0 0 0; -fx-wrap-text: true;"/>
        </VBox>
    </HBox>
</VBox>