<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.AjouterAtelierController"
            fitToWidth="true"
            style="-fx-background-color: transparent;"
            stylesheets="@/styles/ajouteeatelier.css">

    <content>
        <VBox spacing="15" alignment="TOP_CENTER" fillWidth="true">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <VBox spacing="15" maxWidth="1000" style="-fx-background-color: white; -fx-padding: 30; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.5, 0, 0);">
                <Label text="Ajouter un Atelier" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #3a4c68;"/>

                <TextField fx:id="titreField" promptText="Titre"/>

                <ComboBox fx:id="categorieField" promptText="Catégorie"/>

                <TextArea fx:id="descriptionField" promptText="Description"/>

                <ComboBox fx:id="niveauDiffField" promptText="Niveau de difficulté"/>

                <TextField fx:id="prixField" promptText="Prix"/>
                <TextField fx:id="dureeField" promptText="Durée (minutes)"/>
                <TextField fx:id="lienField" promptText="Lien Zoom"/>

                <HBox spacing="10">
                    <DatePicker fx:id="datePicker"/>
                    <TextField fx:id="heureField" promptText="Heure (HH:mm)"/>
                </HBox>

                <HBox spacing="10" alignment="CENTER">
                    <Button text="Retour à la liste" onAction="#handleRetourListe" styleClass="secondary-button"/>
                    <Button text="Enregistrer" onAction="#handleAjouterAtelier" styleClass="primary-button"/>
                </HBox>
            </VBox>

        </VBox>
    </content>
</ScrollPane>
