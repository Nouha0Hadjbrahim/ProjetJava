<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.MessagesViewController"
      spacing="20"
      style="-fx-padding: 20; -fx-background-color: #F4F6FA;">

    <Label text="Messages" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1d2135;"/>

    <ScrollPane fx:id="messagesScrollPane"
                style="-fx-background-color: transparent;"
                fitToWidth="true"
                hbarPolicy="NEVER">
        <VBox fx:id="messagesContainer" spacing="10"/>
    </ScrollPane>

</VBox> 