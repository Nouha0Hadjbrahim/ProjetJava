<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.*?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="controller.ResetPasswordController"
      stylesheets="@/styles/password-recovery.css"
      alignment="CENTER" spacing="20" styleClass="reset-password-container"
      style="-fx-background-color: #fcf8e7; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-padding: 30px; -fx-max-width: 400px; -fx-min-width: 350px;">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <VBox style="-fx-alignment: center; -fx-padding: 0 0 20 0;">
        <ImageView fitHeight="100" fitWidth="140" preserveRatio="true">
                <Image url="@/assets/logo1.png"/>
        </ImageView>
    </VBox>

    <Label text="Nouveau mot de passe" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-alignment: center;"/>
    <Label text="Entrez votre nouveau mot de passe" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d; -fx-alignment: center;"/>
    
    <VBox spacing="10" style="-fx-background-color:  #fffae7; -fx-background-radius: 8px; -fx-padding: 20px; -fx-spacing: 15px;">
        <PasswordField fx:id="passwordField" promptText="Nouveau mot de passe" style="-fx-background-color: #ffffff; -fx-background-radius: 6px; -fx-border-color:#8C4A1D; -fx-border-radius: 6px; -fx-border-width: 1px; -fx-padding: 12px; -fx-font-size: 14px; -fx-prompt-text-fill: #bdc3c7;"/>
        <Label text="Minimum 6 caractères, 1 majuscule et 1 chiffre" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px; -fx-font-style: italic;"/>
        <PasswordField fx:id="confirmPasswordField" promptText="Confirmer le mot de passe" style="-fx-background-color: #ffffff; -fx-background-radius: 6px; -fx-border-color: #8C4A1D; -fx-border-radius: 6px; -fx-border-width: 1px; -fx-padding: 12px; -fx-font-size: 14px; -fx-prompt-text-fill: #bdc3c7;"/>
        <Label fx:id="errorLabel" style="-fx-text-fill: #e74c3c; -fx-font-size: 12px; -fx-alignment: center;" visible="false"/>
    </VBox>
    
    <Button text="Réinitialiser" onAction="#handleResetPassword" styleClass="send-code-button" />
    <Button text="Retour" onAction="#handleBack" styleClass="back-button"/>
</VBox> 