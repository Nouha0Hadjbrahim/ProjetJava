<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<ScrollPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.ReclamationController"
            stylesheets="@/styles/reclamation.css"
            fitToWidth="true"
            style="-fx-background-color: transparent;">

    <VBox fx:id="reclamationContainer" spacing="40" alignment="CENTER" styleClass="bg">


        <!-- Titre principal -->
        <VBox spacing="10" alignment="CENTER">
            <Label text="Réclamations" styleClass="reclamation-title" />
            <Label text="Apprenez l'artisanat à distance avec nos experts !" styleClass="reclamation-subtitle" />
        </VBox>



        <!-- Formulaire d'ajout de réclamation avec image à droite -->
        <HBox spacing="40" alignment="CENTER" styleClass="form-hbox fade-in">
            <!-- Formulaire à gauche -->
            <VBox spacing="15" styleClass="form-container" maxWidth="900" alignment="CENTER">
                <VBox spacing="10" alignment="CENTER">
                    <Label text="Ajouter une Nouvelle Réclamation" styleClass="reclamation-title" />
                </VBox>
                <GridPane hgap="10" vgap="10" alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" hgrow="NEVER" />
                        <ColumnConstraints hgrow="ALWAYS" prefWidth="300"/>
                    </columnConstraints>
                    <!-- Titre -->
                    <Label text="Titre" styleClass="form-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="titreField" styleClass="form-field" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                    <!-- Description -->
                    <Label text="Description" styleClass="form-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextArea fx:id="descriptionField" wrapText="true" prefRowCount="4" styleClass="form-field" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                </GridPane>
                <!-- Messages d'erreur -->
                <VBox alignment="CENTER" spacing="5">
                    <Label fx:id="titreErrorLabel" text="Le titre doit contenir entre 3 et 6 caractères" styleClass="error-label" visible="false" managed="false"/>
                    <Label fx:id="descriptionErrorLabel" text="La description doit contenir entre 3 et 500 caractères" styleClass="error-label" visible="false" managed="false"/>
                </VBox>
                <!-- Bouton centré -->
                <Button fx:id="submitButton" text="Ajouter" styleClass="submit-button" />
            </VBox>
            <!-- Image à droite -->
            <VBox alignment="CENTER" styleClass="image-container">
                <ImageView fitWidth="350" fitHeight="350" preserveRatio="true">
                    <image>
                        <Image url="@/assets/reclamation.png" />
                    </image>
                </ImageView>
            </VBox>
        </HBox>
        <!-- TableView avec conteneur pour contrôler la largeur -->
        <StackPane alignment="CENTER">
            <TableView fx:id="reclamationTable"
                       maxWidth="900"
                       prefHeight="400"
                       styleClass="reclamation-table">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="titreColumn" text="Titre" prefWidth="180"/>
                    <TableColumn fx:id="statutColumn" text="Statut" prefWidth="150"/>
                    <TableColumn fx:id="dateColumn" text="Date" prefWidth="150"/>
                    <TableColumn fx:id="actionColumn" text="Actions" prefWidth="120"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </StackPane>

        <Label fx:id="noReclamationLabel"
               text="Aucune réclamation disponible"
               visible="false"
               managed="false"
               style="-fx-text-fill: grey; -fx-font-style: italic;" />

        <!-- Pagination -->
        <Pagination fx:id="pagination"
                    styleClass="pagination"
                    maxPageIndicatorCount="5"/>
        <!-- Footer -->
        <fx:include source="/fornt views/footer.fxml" />
    </VBox>
</ScrollPane>