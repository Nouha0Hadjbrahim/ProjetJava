<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.chart.PieChart?>

<?import javafx.scene.shape.Circle?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.TableUtilisateursController"
            style="-fx-background-color: linear-gradient(to bottom right, #f8f9fa, #e9ecef);"
            stylesheets="@/styles/table_utilisateur.css">

    <!-- EN-TÊTE -->
    <top>
        <VBox  alignment="CENTER">
            <!-- Titre principal -->
            <Label text="Gestion des utilisateurs" styleClass="titre-principal"/>

            <!-- Ligne décorative -->
            <HBox alignment="CENTER">
                <Region
                        prefHeight="2"
                        maxHeight="2"
                        prefWidth="320"
                        maxWidth="320"
                        style="-fx-background-color: #3a4c68;" />
            </HBox>

            <!-- Barre de recherche et filtre -->
            <HBox fx:id="searchBox" alignment="CENTER" spacing="15">
                <padding>
                    <Insets top="50" bottom="12" />
                </padding>
                <HBox spacing="5" alignment="CENTER_LEFT">
                    <Label text="🔍" styleClass="search-icon"/>
                    <TextField fx:id="searchField"
                               promptText="Rechercher par nom, prénom ou email..."
                               styleClass="search-field"/>
                    <StackPane fx:id="micContainer">
                        <ImageView fx:id="micIcon"
                                   fitHeight="30" fitWidth="30"
                                   pickOnBounds="true"
                                   preserveRatio="true"
                                   onMouseClicked="#handleMicButton"/>
                        <Circle fx:id="recordingIndicator"
                                radius="4"
                                fill="red"
                                visible="false"
                                StackPane.alignment="TOP_RIGHT"/>
                    </StackPane>



                </HBox>
                <ComboBox fx:id="statusFilter" promptText="Filtrer par statut" 
                         styleClass="filter-combo"/>
            </HBox>

        </VBox>
    </top>

    <!-- CONTENU : liste des utilisateurs -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <HBox alignment="CENTER">
                <VBox alignment="CENTER" >
                    <StackPane alignment="CENTER" styleClass="table-card">
                        <VBox alignment="TOP_CENTER">
                            <!-- ✅ Ligne d'en-tête -->


                            <!-- ✅ Liste des utilisateurs -->
                            <VBox fx:id="userListContainer" alignment="CENTER" spacing="10"/>
                        </VBox>
                    </StackPane>
                </VBox>
            </HBox>
        </ScrollPane>
    </center>

    <!-- PAGINATION -->
    <bottom>
        <HBox fx:id="paginationContainer" alignment="CENTER" spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
        </HBox>
    </bottom>

</BorderPane>
