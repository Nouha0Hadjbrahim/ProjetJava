<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import model.Fournisseur?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.AjoutMaterielController"
      spacing="10"
      style="-fx-padding: 20; -fx-background-color: #f5f5f5;"
      prefWidth="600">

    <Label text="Ajouter un nouveau matériel" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Label pour les messages d'erreur -->
    <Label fx:id="errorLabel" style="-fx-text-fill: red; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints percentWidth="30"/>
            <ColumnConstraints percentWidth="70"/>
        </columnConstraints>

        <!-- Nom du matériel -->
        <Label text="Nom du matériel :" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nomField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <!-- Catégorie -->
        <Label text="Catégorie *:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="categorieCombo" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <!-- Quantité -->
        <Label text="Quantité en stock :" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="quantiteField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <!-- Seuil minimum -->
        <Label text="Seuil minimum :" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="seuilField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <!-- Prix unitaire -->
        <Label text="Prix unitaire :" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="prixField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <!-- Description -->
        <Label text="Description :" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextArea fx:id="descriptionArea" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <!-- Photo -->
        <Label text="URL de la photo :" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <TextField fx:id="photoField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>


        <Label text="Fournisseur :" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
        <ComboBox fx:id="fournisseurCombo" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Retour" fx:id="btnRetour" onAction="#handleRetour"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
        <Button fx:id="btnAjouter" text="Ajouter" onAction="#handleAjouter"
                style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
    </HBox>

</VBox>
