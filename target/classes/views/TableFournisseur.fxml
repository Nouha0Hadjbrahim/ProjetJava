<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.1"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.TableFournisseurController"
      spacing="15"
      alignment="TOP_CENTER"
      stylesheets="@/styles/table_utilisateur.css">

    <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

    <!-- TITRE -->
    <Label text="GESTION DES FOURNISSEURS"
           styleClass="titre-principal"/>

    <!-- BARRE DE RECHERCHE + BOUTON AJOUTER -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="searchField"
                   promptText="Rechercher un fournisseur..."
                   styleClass="search-field"
                   HBox.hgrow="ALWAYS"/>
        <Button fx:id="btnAjouter"
                styleClass="action-icon-button"
                onAction="#handleAjouter">
            <graphic>
                <ImageView fitWidth="23" fitHeight="23">
                    <image><Image url="/assets/icons/ajouter.png"/></image>
                </ImageView>
            </graphic>
            <tooltip><Tooltip text="Ajouter un fournisseur"/></tooltip>
        </Button>
    </HBox>

    <!-- CONTENEUR BLANC ARRONDI POUR LA “TABLE” -->
    <VBox fx:id="fournisseursListContainer"
          spacing="0"
          styleClass="table-card"
          maxWidth="800" minWidth="800">

        <!-- EN-TÊTE DE LA TABLE -->
        <HBox spacing="10" styleClass="table-header" alignment="CENTER_LEFT">
            <Label text="Nom"      prefWidth="200" styleClass="header-label"/>
            <Label text="Adresse"  prefWidth="250" styleClass="header-label"/>
            <Label text="Contact"  prefWidth="150" styleClass="header-label"/>
            <Label text="Actions"  prefWidth="160" styleClass="header-label"/>
        </HBox>

        <!-- LISTVIEW STYLÉE COMME TABLE -->
        <ListView fx:id="listViewFournisseurs"
                  prefHeight="400"
                  styleClass="table-listview"/>

        <!-- PAGINATION -->
        <HBox fx:id="paginationContainer"
              spacing="5"
              alignment="CENTER"
              styleClass="pagination-container"/>
    </VBox>

</VBox>
