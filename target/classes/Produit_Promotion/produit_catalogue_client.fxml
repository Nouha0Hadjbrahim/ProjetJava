<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/20"
            fx:controller="controller.ProductCatalogController"
            stylesheets="@/styles/front_client.css, @/styles.css"
            style="-fx-background-color:  #f8e5d5;  -fx-background: #f8e5d5;">

    <!-- Top Section with Title -->
    <top>
        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: transparent; -fx-padding: 20;">
            <Label text="Notre Catalogue" styleClass="main-title" />
            <Label text="Découvrez notre sélection de produits de qualité" styleClass="sub-title" />
        </VBox>
    </top>

    <!-- Main Content: Scrollable Grid -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true"
                   style="-fx-background-color: #f8e5d5; -fx-background-insets: 0; -fx-padding: 0;">
            <content>
                <VBox style="-fx-background-color: #f8e5d5; -fx-padding: 20;">
                    <GridPane fx:id="productGrid" 
                             alignment="CENTER" 
                             hgap="25" 
                             vgap="25" 
                             styleClass="grid-pane">
                        <padding>
                            <Insets bottom="20" left="20" right="20" top="20" />
                        </padding>
                    </GridPane>
                </VBox>
            </content>
        </ScrollPane>
    </center>
    <!-- Footer -->
</BorderPane>