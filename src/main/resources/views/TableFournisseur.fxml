<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.ImageView?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.TableFournisseurController"
      spacing="10"
      style="-fx-padding: 20;">

    <Label text="Liste des Fournisseurs" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Bouton Ajouter -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Ajouter" fx:id="btnAjouter"  onAction="#handleAjouter"
                style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
    </HBox>

    <!-- En-têtes des colonnes -->
    <HBox spacing="10" style="-fx-padding: 10; -fx-background-color: #f0f0f0;">
        <Label text="Nom" style="-fx-font-weight: bold; -fx-pref-width: 200;" />
        <Label text="Adresse" style="-fx-font-weight: bold; -fx-pref-width: 250;" />
        <Label text="Contact" style="-fx-font-weight: bold; -fx-pref-width: 150;" />
        <Label text="Actions" style="-fx-font-weight: bold; -fx-pref-width: 150;" />
    </HBox>

    <!-- ListView pour les fournisseurs -->
    <ListView fx:id="listViewFournisseurs" prefHeight="400" style="-fx-background-radius: 10;">

    </ListView>

    <!-- Pagination -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Précédent" fx:id="btnPrecedent" onAction="#handlePrecedent"/>
        <Label fx:id="pageLabel"/>
        <Button text="Suivant" fx:id="btnSuivant" onAction="#handleSuivant"/>
    </HBox>
</VBox>
