<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.ModifierFournisseurController"
      spacing="10"
      style="-fx-padding: 20; -fx-background-color: #f5f5f5;"
      prefWidth="600">

    <Label text="Modifier le fournisseur"
           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <Label fx:id="errorLabel"
           style="-fx-text-fill: red; -fx-font-weight: bold;"
           wrapText="true"/>

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints percentWidth="30"/>
            <ColumnConstraints percentWidth="70"/>
        </columnConstraints>

        <!-- ID (non modifiable) -->
        <Label text="ID :" GridPane.rowIndex="0" GridPane.columnIndex="0"
               style="-fx-font-weight: bold;"/>
        <TextField fx:id="idField" editable="false"
                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <!-- Nom -->
        <Label text="Nom *:" GridPane.rowIndex="1" GridPane.columnIndex="0"
               style="-fx-font-weight: bold;"/>
        <TextField fx:id="nomField"
                   GridPane.rowIndex="1" GridPane.columnIndex="1"
                   promptText="Lettres seulement"/>

        <!-- Adresse -->
        <Label text="Adresse :" GridPane.rowIndex="2" GridPane.columnIndex="0"
               style="-fx-font-weight: bold;"/>
        <TextField fx:id="adresseField"
                   GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <!-- Contact -->
        <Label text="Contact *:" GridPane.rowIndex="3" GridPane.columnIndex="0"
               style="-fx-font-weight: bold;"/>
        <TextField fx:id="contactField"
                   GridPane.rowIndex="3" GridPane.columnIndex="1"
                   promptText="8 chiffres"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Annuler" fx:id="btnAnnuler" onAction="#handleAnnuler"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;"/>
        <Button text="Enregistrer" fx:id="btnEnregistrer" onAction="#handleEnregistrer"
                style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>

    <Label text="* Champs obligatoires"
           style="-fx-font-style: italic; -fx-text-fill: #7f8c8d;"/>
</VBox>