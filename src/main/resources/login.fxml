<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.image.ImageView?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="controller.LoginController"
           stylesheets="@/styles/signup.css"
           style="-fx-background-color: #8A3B12;">  <!-- Marron -->

    <VBox alignment="CENTER" spacing="32" maxWidth="500"
          style="-fx-background-color: #fcf8e7; -fx-padding: 20; -fx-background-radius: 12;"
          StackPane.alignment="CENTER">

        <!-- Logo -->
        <ImageView fx:id="logoImage" fitHeight="100" fitWidth="140" preserveRatio="true" />

        <!-- Titre -->
        <Label text="Bonjour !" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Label text="Connectez-vous pour continuer." style="-fx-text-fill: #69717c;"/>

        <!-- Formulaire -->
        <VBox spacing="10" alignment="CENTER">
            <TextField fx:id="txtEmail" promptText="Votre email"
                       styleClass="form-field"/>

            <PasswordField fx:id="txtPassword" promptText="Votre mot de passe"
                           styleClass="form-field"/>
        </VBox>

        <Button fx:id="btnLogin" text="Se connecter"
                styleClass="form-button" />

        <Hyperlink text="Mot de passe oublié ?"
                   onAction="#handleForgotPassword"
                   styleClass="forgot-link"/>

        <!-- Séparateur -->
        <HBox alignment="CENTER" spacing="5">
            <Separator prefWidth="80"/>
            <Label text="Ou"/>
            <Separator prefWidth="80"/>
        </HBox>


        <!-- Google Login -->
        <Button fx:id="btnGoogle" text="Se connecter avec Google"
                styleClass="form-button">
            <graphic>
                <ImageView fx:id="googleIcon" fitHeight="16" fitWidth="16" />
            </graphic>
        </Button>

        <!-- Face ID Login -->
        <Button fx:id="btnFaceID" text="Se connecter avec Face ID" styleClass="form-button">
            <graphic>
                <ImageView fx:id="faceIcon" fitHeight="16" fitWidth="16" />
            </graphic>
        </Button>


        <!-- Lien vers inscription -->
        <Label>
            <graphic>
                <Hyperlink fx:id="linkSignup" text=" Vous n'avez pas de compte ? Créer un compte"
                           styleClass="hover-link" />
            </graphic>
        </Label>
    </VBox>
</StackPane>
