<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<ScrollPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.WishlistController"
            stylesheets="@/styles/materiaux.css"
            fitToWidth="true"
            style="-fx-background-color: transparent;">

    <VBox spacing="40" alignment="CENTER" styleClass="bg">
        <!-- Titre principal -->
        <VBox spacing="10" alignment="CENTER">
            <Label text="MA WISHLIST" styleClass="materiaux-title"/>
            <Label text="Vos matériaux favoris sauvegardés pour plus tard"
                   styleClass="materiaux-subtitle"/>
        </VBox>

        <!-- Barre de recherche et bouton retour (identique à materiaux) -->
        <HBox spacing="20" alignment="CENTER">
            <TextField promptText="Rechercher..." styleClass="search-field"/>

            <Button text="Retour aux matériaux" styleClass="action-btn"
                    onAction="#handleBackToMaterials"/>
        </HBox>

        <!-- Grille des flip cards -->
        <GridPane fx:id="materialsGrid" hgap="20" vgap="20" alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints percentWidth="25" halignment="CENTER"/>
                <ColumnConstraints percentWidth="25" halignment="CENTER"/>
                <ColumnConstraints percentWidth="25" halignment="CENTER"/>
                <ColumnConstraints percentWidth="25" halignment="CENTER"/>
            </columnConstraints>
        </GridPane>

        <!-- Footer -->
        <fx:include source="/fornt views/footer.fxml"/>
    </VBox>
</ScrollPane>